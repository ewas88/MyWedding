        <div style="margin-top: -80px;">
            <h2 align="center">Lista rzeczy do zrobienia przed Å›lubem</h2>
            <form action="#" method="post" style="margin: auto; display: table; padding: 5px">
                <input style="width: 200px" class="todo" type="text" name="task" placeholder="Zadanie">
                <input style="width: 120px" class="todo" name="deadline" type="text" id="datepicker"
                       placeholder="Do kiedy">
                <input style="width: 80px; border: dotted" type="submit" class="addBtn" value="Dodaj">
            </form>
        </div>

        <ul class="todo" style="margin: auto; display: table; padding: 0">
            {% for task in tasks %}
                {% if task.isDone == 0 %}
                    <li class="todo">&hearts; <b>{{ task.task }} | {{ task.deadline|date('d.m.Y') }}</b>
                        <a style="color: black" href="{{ path('done_list', {'id': task.id }) }}"><span class="done"> <i
                                        class="fa fa-check"></i> </span></a>
                        <a style="color: black" href="{{ path('delete_list', {'id': task.id }) }}"><span class="close"> <i
                                        class="fa fa-times"></i> </span></a>
                    </li>
                {% else %}
                    <li class="todo">&hearts; <s>{{ task.task }} | {{ task.deadline|date('d.m.Y') }}</s>
                        <a style="color: black" href="{{ path('delete_list', {'id': task.id }) }}"><span
                                    class="close"><i class="fa fa-times"></i> </span></a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>

    </article>

{% endblock %}