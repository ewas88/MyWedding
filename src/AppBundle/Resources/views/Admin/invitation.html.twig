{% extends "admin.html.twig" %}
{% block body %}
    <article class="middlefont">
        <div class="container" style="float: left; border: dotted; padding: 5px">
            <h3>Wszystkie zaproszenia - {{ invitations|length }}</h3>
            <table>
            <tr>
                <th style="width: 200px">Numer</th>
                <th style="width: 200px">Kod</th>
            </tr>
            {% for invitation in invitations %}
                <tr>
                    <td>{{ invitation.id }}</td>
                    <td> {{ invitation.code }}</td>
                </tr>
            {% endfor %}
            </table>
        </div>

        <div class="w3-container w3-teal" style="float: right;">
            <h3>Stwórz nowe zaproszenie</h3>
            <form action="#" method="POST" enctype="multipart/form-data">
                <p>
                    Dodaj gości lub stwórz puste:
                    <br>
                    {% for guest in guests %}
                        <input type="checkbox" name="guest_list[]" value="{{ guest.id }}"> {{ guest.name }} {{ guest.surname }} <br>
                    {% endfor %}
                </p>
                <p>
                    <input id="font" type="submit" name="check" value="Dodaj">
                </p>
            </form>
        </div>
    </article>

{% endblock %}