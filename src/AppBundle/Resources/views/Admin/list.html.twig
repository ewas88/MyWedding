{% extends "admin.html.twig" %}
{% block body %}
    <article>
        <div style="float: left">
            <h3>TO DO LIST</h3>
            {% for task in tasks %}
                <p>
                    Name: {{ task.task }}

                {% if task.deadline is not null %}
                    deadline: {{ task.deadline|date('d M Y') }}
                    {% endif %}
                    Is done: {{ task.isDone }}
                </p>
            {% endfor %}
        </div>
        <div style="float: right">
            <h3>Add new task</h3>
            <form action="/admin/list" method="POST" enctype="multipart/form-data">
                <p>
                    Task: <input type="text" name="task"><br>
                    Deadline: <input name="deadline" type="text" id="datepicker"><br>
                </p>
                <p>
                    <input type="submit" name="add" value="Add">
                </p>
            </form>
        </div>
    </article>

{% endblock %}